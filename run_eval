#rm -rf results/dense/*
#rm -rf results/kendra/*
#rm -rf results/openai/*


python -m evaluation.run_evaluation  --no-stop-on-fail --mode dense &
PID_DENSE=$!

python -m evaluation.run_evaluation  --no-stop-on-fail --mode kendra &
PID_KENDRA=$!

python -m evaluation.run_evaluation  --no-stop-on-fail --mode openai &
PID_OPENAI=$!

# Wait for all to complete
echo "Waiting for all evaluations to complete..."
wait $PID_DENSE $PID_KENDRA $PID_OPENAI
finished

echo ""
echo "===================================="
echo "All evaluations complete!"
echo ""
